<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/com_facebook_button_login_background_color" />
            <gradient android:angle="-90" android:startColor="@color/com_facebook_button_background_color_pressed" android:endColor="@color/com_facebook_button_background_color_pressed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/com_facebook_blue" />
            <solid android:color="@color/com_facebook_button_background_color_focused"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/com_facebook_button_login_background_color" />
            <gradient android:angle="-90" android:startColor="@color/com_facebook_button_background_color" android:endColor="@color/com_facebook_button_background_color" />
        </shape>
    </item>
</selector>