<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@android:color/white" />
            <gradient android:angle="-90" android:startColor="@color/googleDarkRed" android:endColor="@color/googleDarkRed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@android:color/white" />
            <solid android:color="@color/googleDarkRed"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:startColor="@color/googleRed" android:endColor="@color/googleRed" />
        </shape>
    </item>
</selector>